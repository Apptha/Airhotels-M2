<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
  <default>
    <airhotels>
    <order>
        <notification_template>airhotels_order_notification_template</notification_template>
        <item_request_template>airhotels_order_item_request_template</item_request_template>
        <item_cancel_return_template>airhotels_order_item_cancel_return_template</item_cancel_return_template>
      </order>  
       <product>
        <approval_template>airhotels_product_approval_template</approval_template>
        <disapproval_template>airhotels_product_disapproval_template</disapproval_template>
        <new_booking_template>airhotels_product_new_booking_template</new_booking_template>
        <host_booking_approval_template>airhotels_product_host_booking_approval_template</host_booking_approval_template>
        <admin_booking_delete_option>airhotels_product_admin_booking_delete_option</admin_booking_delete_option>
        <airhotels_product_contact_host>airhotels_product_contact_host</airhotels_product_contact_host>
        <airhotels_product_contact_host_email>airhotels_product_contact_host_email</airhotels_product_contact_host_email>
        <airhotels_product_contact_host_phoneno>airhotels_product_contact_host_phoneno</airhotels_product_contact_host_phoneno>
      </product>
    </airhotels>
    
    
  </default>
</config>